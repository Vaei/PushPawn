name: Sync README to Wiki

on:
  push:
    branches:
      - main

jobs:
  sync-readme:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Checkout Wiki
        run: |
          git clone https://github.com/${{ github.repository }}.wiki.git

      - name: Copy README to Wiki
        run: |
          cp ./README.md ./${{ github.repository }}.wiki/Home.md

      - name: Commit and push changes to Wiki
        working-directory: ./${{ github.repository }}.wiki
        uses: stefanzweifel/git-auto-commit-action@v4
        with:
          commit_message: "Sync README to Wiki"
          commit_user_name: "GitHub Action"
          commit_user_email: "action@github.com"
